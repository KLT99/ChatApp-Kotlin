<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perfil.EditImagePerfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgPerfilUpdate"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:background="#354f60"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/imagen_usuario"/>
        
        <Button
            android:id="@+id/btnSelectImg"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_select_img"
            android:layout_marginTop="10dp"
            android:text="@string/btn_selectImage"/>

        <Button
            android:id="@+id/btnUpdateImg"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:icon="@drawable/ic_update"
            android:text="@string/btn_updateImage"/>

    </LinearLayout>

</RelativeLayout>